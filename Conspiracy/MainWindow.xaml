<Window x:Class="Conspiracy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conspiracy"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="State" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Hello" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Grid.Row="1" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="20" Click="Button_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" FontSize="20" Click="Button_Click_1"/>
    </Grid>
</Window>
